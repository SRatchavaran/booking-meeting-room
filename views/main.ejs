        border: 1px solid #B8B8B8; 
        color: #595A0D;
        border-radius: 16px; 
        font-size: 16px; 
        font-style: normal; 
        font-weight: 400; 
        line-height: 16px; 
        padding: 16px 16px;
    }
    .bodyTextStyle{
        font-size: 20px;
        font-style: normal;
        font-weight: 400;
        color: #595A0D;
        text-align: start;
    }
    .bodyDropdownTextStyle{
        border: 1px solid #B8B8B8; 
        border-radius: 16px; 
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        color: #595A0D;
        text-align: start;
        padding: 16px;
    }
    .bottonEnable{
        color: #FFFFFF;
        padding: 12px 24px;
        align-items: flex-start;
        gap: 10px;
        flex-shrink: 0;
        border-radius: 22px;
